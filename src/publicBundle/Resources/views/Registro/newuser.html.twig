                            </ul>
                        {% endif %}
                    {%endfor%#}
                </ul>
            </div>
        </div>
    </div>
                    
    <div class="col-lg-9 col-md-9">
	<div class="deal-wrapper">
            <div class="block-title-default">
                <h2><span>Nuevo usuario</span></h2><div class="triangulo_bottom_left">&nbsp;</div>
            </div>
            <div class="contenedor">
            <form class="well" action="{{ path('registro', {'id' : user.id}) }}" method="post" enctype='multipart/form-data' >
                <div class="row">
                    <div class="form-group col-sm-3">
                        {{ form_label(form.fullname) }}
                        {{form_widget(form.fullname)}}
                    </div>
                    <div class="form-group col-sm-3">
                        {{ form_label(form.lastname) }}
                        {{form_widget(form.lastname)}}
                    </div>
                    <div class="form-group col-sm-3">
                        {{ form_label(form.phonenumber) }}
                        {{form_widget(form.phonenumber)}}
                    </div>
                    <div class="form-group col-sm-3">
                        {{ form_label(form.country) }}
                        {{form_widget(form.country)}}
                    </div>
                    <div class="form-group col-sm-3">
                        {{ form_label(form.city) }}
                        {{form_widget(form.city)}}
                    </div>
                    <div class="form-group col-sm-3">
                        {{ form_label(form.address) }}
                        {{form_widget(form.address)}}
                    </div>
                    <div class="form-group col-sm-3">
                        {{ form_label(form.postalcode) }}
                        {{form_widget(form.postalcode)}}
                    </div>
                    <div class="form-group col-sm-3">
                        {{ form_label(form.email) }}
                        {{form_widget(form.email)}}
                    </div>
                </div>
                <div class="row">    
                    <div class="form-group col-sm-6">
                         {{form_label(form.password.first)}}
                         {{form_widget(form.password.first)}}
                    </div>
                    <div class="form-group col-sm-6">
                         {{form_label(form.password.second)}}
                         {{form_widget(form.password.second)}}
                    </div>
                </div>    

                {{form_rest(form)}}
                    <div class="row"> 
                        <div class="form-group col-sm-12">
                            <a class="botonazul"  title="Volver a la pÃ¡gina anterior" href="{{ path('homepage') }}">
                                Volver
                            </a>
                            <button type="submit" class="botonazul">Guardar</button>
                        </div>
                    </div>
                </form>            
            </div>
        </div>							
    </div>

