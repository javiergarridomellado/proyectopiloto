                </a>	
                <ul class="sm-megamenu-hover sm_megamenu_menu ">
                    <li class="">
                        <form method="POST" action="{#{path('busqueda')}#}" id="formbuscar">
                            <input type="text" name="text" />
                            <input type="image" src="/imagenes/lupa.png" />
                        </form>
                    </li>
                    {#% for categoria in categorias %}
                        <li class="">
                            <a href="{{path('page_categegoria', {'nombrecategoria': categoria.nameURL})}}" ><span class="">{{categoria}}</span></a>
                        </li>
                        {% if (categoria.subcategories | length) > 0 %}
                            <ul class="ocultar" class="menuSubcategorias">
                                {% for subcategoria in categoria.subcategories %}
                                    <li><a href="{{path('page_subcategoria', {'nombrecategoria': subcategoria.category.nameURL, 'nombresubcategoria': subcategoria.nameURL})}}">{{subcategoria}}</a></li>
