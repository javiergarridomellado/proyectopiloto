{% block javascripts22 %}
    <script type="text/javascript">
        var urlAniadirProducto = "{#{path('cart_add')}#}";
        var urlvertarifas = "{#{path('ver_tarifas')}#}";
    </script>
    <script src="{#{ asset('bundles/principal/js/carrito.js') }#}"></script>
    <script type="text/javascript">
        $('.vertarifas').click(function(e){
            e.preventDefault();
            var idproducto = parseInt($(this).attr('id'));
            if (idproducto > 0){
                $.ajax({
                     url: urlvertarifas,
                     data:  {'idproducto': idproducto},
                     type: "POST", 
                     success:function(result){
                         if (result != ""){
                            var obj = JSON.parse(result);
                            $('#divprecios').html(obj.html);
                            $('#modalprecios').modal();
                         }
                     }
                 });
             }
        });
    </script>
{% endblock %}