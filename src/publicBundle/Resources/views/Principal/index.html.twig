{# empty Twig template #}
{% extends '::bodyPrincipal.html.twig'%}

{% block title %}Proyecto piloto{% endblock %}

{% block cuerpo %}
    
                    
    <div class="col-lg-12 col-md-12">
	<div class="deal-wrapper">
            <div class="block-title-default">
                <h2><span>Pel√≠culas</span></h2><div class="triangulo_bottom_left">&nbsp;</div>
            </div>
            <div class="contenedor">
                {% set indice = 0 %}
                {% for pelicula in peliculas %}
                    {% include 'publicBundle:Principal:pelicula.html.twig'%}
                {% endfor %}
            </div>
            <div class="col-sm-12" style="text-align: center" >
                <nav aria-label="Page navigation example">
                    {% if top is not defined %}
                        {% if pagesCount > 0 %}
                            <section class="divpaginador">
                                <ul class="pagination">

                                        {% if currentpage > 1 %}
                                            {% set prev = currentpage - 1%}
                                            <li class="page-item"><a class="page-link" href="{{ path('homepage', {'page': prev}) }}">&laquo;</a>
                                            </li> 

                                            {% endif %}

                                        {% for i in 1..pagesCount %}
                                            <li class="page-item"><a {% if i == currentpage %}class="selected page-link"{%else%}class="page-link"{% endif %}
                                                                                href="{{ path('homepage', {'page': i}) }}">{{ i }}</a>
                                            </li> 
                                        {% endfor %}


                                        {% if currentpage < pagesCount %}
                                            {% set next = currentpage + 1%}
                                            <li class="page-item"><a  class="page-link" href="{{ path('homepage', {'page': next}) }}">&raquo;</a>
                                            </li> 

                                        {% endif %}
                                </ul>
                            </section>
                        {% endif %} 
                    {% else %}
                        {% if pagesCount > 0 %}
                            <section class="divpaginador">
                                <ul class="pagination">

                                        {% if currentpage > 1 %}
                                            {% set prev = currentpage - 1%}
                                            <li class="page-item"><a class="page-link" href="{{ path('top_peliculas', {'page': prev}) }}">&laquo;</a>
                                            </li> 

                                            {% endif %}

                                        {% for i in 1..pagesCount %}
                                            <li class="page-item"><a {% if i == currentpage %}class="selected page-link"{%else%}class="page-link"{% endif %}
                                                                                href="{{ path('top_peliculas', {'page': i}) }}">{{ i }}</a>
                                            </li> 
                                        {% endfor %}


                                        {% if currentpage < pagesCount %}
                                            {% set next = currentpage + 1%}
                                            <li class="page-item"><a  class="page-link" href="{{ path('top_peliculas', {'page': next}) }}">&raquo;</a>
                                            </li> 

                                        {% endif %}
                                </ul>
                            </section>
                        {% endif %} 
                        
                    {% endif %}    
                </nav>
            </div> 
        </div>							
    </div>


{% endblock %}
